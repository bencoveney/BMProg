{
  "name": "ts-react-boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate project with TypeScript and React",
  "main": "docs/bundle.js",
  "dependencies": {
    "json-server": "^0.12.0",
    "mdi": "^2.0.46",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "uglifyjs-webpack-plugin": "^1.2.4",
    "webpack": "^4.4.1",
    "copy-webpack-plugin": "^4.2.0",
    "html-webpack-plugin": "^3.1.0",
    "favicons-webpack-plugin": "0.0.7",
    "html-webpack-include-assets-plugin": "^1.0.2",
    "clean-webpack-plugin": "^0.1.17",
    "webpack-merge": "^4.1.0"
  },
  "devDependencies": {
    "@types/copy-webpack-plugin": "^4.0.1",
    "@types/html-webpack-plugin": "^2.28.0",
    "@types/node": "^8.0.9",
    "@types/react": "^15.0.24",
    "@types/react-dom": "^15.5.0",
    "@types/webpack": "^3.0.2",
    "@types/webpack-env": "^1.13.0",
    "@types/webpack-merge": "^4.1.0",
    "awesome-typescript-loader": "^3.1.3",
    "concurrently": "^3.5.0",
    "markdownlint-cli": "^0.4.0",
    "source-map-loader": "^0.2.1",
    "ts-node": "^3.2.0",
    "tslint": "^5.9.1",
    "tslint-loader": "^3.6.0",
    "tslint-react": "^3.2.0",
    "typescript": "^2.3.3",
    "webpack-cli": "^2.0.13",
    "webpack-dev-server": "^3.1.1"
  },
  "scripts": {
    "api": "json-server server/database.json --port 3001",
    "dev": "concurrently \"npm run api\" \"npm run webpack-dev\"",
    "lint-markdown": "markdownlint --config ./mdlint.json ./README.md",
    "lint-webpack": "tslint ./webpack.*",
    "test": "npm run lint-webpack && npm run lint-markdown && npm run webpack-prod",
    "webpack-dev": "webpack-dev-server --config webpack.dev.ts --mode development",
    "webpack-prod": "webpack --config webpack.prod.ts --mode production"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bencoveney/ts-react-boilerplate.git"
  },
  "keywords": [
    "Webpack",
    "React",
    "TypeScript",
    "Boilerplate"
  ],
